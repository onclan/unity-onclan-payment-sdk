<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_appota_bg_payment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.appota.gamesdk.widget.AppotaEditText
            android:id="@+id/com_appota_edit_username"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/com_appota_bg_edit_text"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/com_appota_edit_password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_appota_bg_edit_text"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/com_appota_edit_re_password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingRight="80dp"
            android:background="@drawable/com_appota_bg_edit_text"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray" />

        <com.appota.gamesdk.widget.AppotaEditText
            android:id="@+id/com_appota_edit_email"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/com_appota_bg_edit_text"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/darker_gray" />

        <com.appota.gamesdk.widget.AppotaButton
            android:id="@+id/com_appota_btn_register"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_appota_btn_blue_click"
            android:textColor="@color/com_appota_white"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>
