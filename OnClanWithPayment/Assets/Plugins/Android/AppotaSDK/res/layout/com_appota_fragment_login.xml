<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/com_appota_bg_payment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/com_appota_bg_edit_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <com.appota.gamesdk.widget.AppotaEditText
                android:id="@+id/com_appota_edit_username"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:layout_toLeftOf="@+id/com_appota_login_logo"
                android:textSize="16sp"
                android:drawableLeft="@drawable/com_appota_ic_textfield_uname"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray" />

            <ImageView
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@drawable/com_appota_darker_line"
                android:layout_below="@+id/com_appota_edit_username" />

            <EditText
                android:id="@+id/com_appota_edit_password"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@+id/com_appota_edit_username"
                android:layout_toLeftOf="@+id/com_appota_login_logo"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/com_appota_ic_textfield_pass"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColorHint="@android:color/darker_gray" />

            <ImageView
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/com_appota_login_logo"
                android:padding="4dp"
                android:background="@drawable/com_appota_circular"
                android:src="@drawable/com_appota_ic_appota_logo" />

        </RelativeLayout>

        <com.appota.gamesdk.widget.AppotaButton
            android:id="@+id/com_appota_btn_login"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/com_appota_btn_white_click"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.appota.gamesdk.widget.AppotaButton
            android:id="@+id/com_appota_btn_quick_login"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/com_appota_btn_green_click"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/com_appota_btn_facebook"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/com_appota_ic_facebook"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/com_appota_btn_google"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/com_appota_ic_google"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/com_appota_btn_twitter"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/com_appota_ic_twitter" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/com_appota_spn_lang"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:entries="@array/com_appota_lang" />

            <com.appota.gamesdk.widget.AppotaButton
                android:layout_height="24dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:background="@drawable/com_appota_button_click"
                android:textColor="@color/com_appota_gray"
                android:id="@+id/com_appota_btn_forgot" />

            <com.appota.gamesdk.widget.AppotaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/com_appota_spn_lang"
                android:layout_centerHorizontal="true"
                android:textColor="@color/com_appota_gray"
                android:id="@+id/com_appota_text_version"
                android:textSize="13sp"
                android:paddingBottom="4dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>

