<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:id="@+id/com_appota_header_line"
        android:background="@drawable/com_appota_darker_line"
        android:layout_alignParentTop="true" />

    <com.appota.gamesdk.widget.AppotaTextView
        android:id="@+id/com_appota_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/com_appota_gray"
        android:textSize="16sp" />

    <com.appota.gamesdk.widget.AppotaTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:id="@+id/com_appota_virtual_currency_name" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:id="@+id/com_appota_img_virtual_currency_icon" />

</RelativeLayout>