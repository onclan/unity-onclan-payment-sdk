<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.appota.gamesdk.widget.AppotaTextView
            android:id="@+id/com_appota_text_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/com_appota_btn_sms_left"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>

        <com.appota.gamesdk.widget.AppotaTextView
            android:id="@+id/com_appota_text_virtual_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/com_appota_btn_sms_right"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.android.volley.toolbox.NetworkImageView
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/com_appota_img_virtual_currency_icon"
        android:layout_marginRight="30dp"/>

    <com.appota.gamesdk.widget.AppotaTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:id="@+id/com_appota_virtual_currency_name"
        android:layout_marginRight="30dp"/>
</RelativeLayout>
