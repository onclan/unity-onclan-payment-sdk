<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/com_appota_transaction_id"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.appota.gamesdk.widget.AppotaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/com_appota_transaction_time"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/com_appota_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/com_appota_transaction_amount"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.appota.gamesdk.widget.AppotaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/com_appota_transaction_type"
            android:textColor="@color/com_appota_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/com_appota_transaction_amount"
            android:layout_alignParentRight="true"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>